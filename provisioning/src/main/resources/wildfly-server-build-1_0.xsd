<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns="urn:wildfly:server-build:1.0"
           targetNamespace="urn:wildfly:server-build:1.0"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified">

    <xs:element name="build">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="feature-packs" type="feature-packs-type" minOccurs="0" maxOccurs="1" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="feature-packs-type">
        <xs:sequence>
            <xs:element name="artifact" type="named-type" maxOccurs="unbounded" minOccurs="0" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="named-type">
        <xs:attribute name="name" type="xs:string"/>
    </xs:complexType>

</xs:schema>